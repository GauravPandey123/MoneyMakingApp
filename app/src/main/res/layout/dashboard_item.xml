<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8dp"
        app:cardCornerRadius="@dimen/_8dp"
        app:cardBackgroundColor="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imageViewDashBoardItem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160dp"
                android:background="@drawable/gradient"
                android:scaleType="fitXY"
                android:src="@drawable/dashboard" />

            <TextView
                android:id="@+id/textViewDashBoardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                android:layout_marginTop="@dimen/_120dp"
                android:layout_marginRight="@dimen/_8dp"
                android:text="@string/tittle"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/font_20sp" />

            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_12sdp"
                android:textSize="@dimen/font_sixteen"
                android:textColor="@color/dark_grey"
                android:layout_below="@+id/imageViewDashBoardItem"
                android:text="@string/way"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>